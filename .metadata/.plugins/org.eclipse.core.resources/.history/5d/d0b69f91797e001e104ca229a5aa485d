package week4;

import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.util.StringTokenizer;

public class Q2456 {
	
	static int[] student1 = new int[3];
	static int[] student2 = new int[3];
	static int[] student3 = new int[3];
	
	public static void main(String[] args) throws Exception {
		
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		
		int n = Integer.parseInt(br.readLine());
		
		int score1=0, score2=0, score3=0;
		
		StringTokenizer st;
		int num=0;
		for (int i=0; i<n; i++) {
			st =  new StringTokenizer(br.readLine());
			
			num = Integer.parseInt(st.nextToken());
			score1 += Math.pow(num, num);
			num = Integer.parseInt(st.nextToken());
			score2 += Math.pow(num, num);
			num = Integer.parseInt(st.nextToken());
			score3 += Math.pow(num, num);
		}
		
		//È¸Àå °áÁ¤ Á¶°Ç
		//1. ½ÂÁ¡
		//2. 3ÀÇ °¹¼ö
		//3. ¹«½ÂºÎÀÏ ¶§ 0
		if (score1 > score2 && score1 > score3) {
			System.out.println("1 " + score1);
		} else if (score2 > score1 && score2 > score3) {
			System.out.println("2 " + score2);			
		} else if (score3 > score1 && score3 > score2) {
			System.out.println("3 " + score3);			
		} else {
			System.out.printf("%d %d", 0, Math.sqrt(score1));
		}
			
	}
}
