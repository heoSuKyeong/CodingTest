package week4;

import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.util.StringTokenizer;

public class Q2456 {
	
	static int[] student1 = new int[3];
	static int[] student2 = new int[3];
	static int[] student3 = new int[3];
	
	public static void main(String[] args) throws Exception {
		
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		
		int n = Integer.parseInt(br.readLine());
		
		int[] score = new int[3];
		//int score[0]=0, score[1]=0, score[2]=0;
		
		StringTokenizer st;
		int num=0;
		for (int i=0; i<n; i++) {
			st =  new StringTokenizer(br.readLine());
			
			num = Integer.parseInt(st.nextToken());
			student1[num-1]++;
//			score[0] += num;
			score[0] += num;
			num = Integer.parseInt(st.nextToken());
			student2[num-1]++;
//			score[1] += num;
			score[1] += num;
			num = Integer.parseInt(st.nextToken());
			student3[num-1]++;
//			score[2] += num;
			score[2] += num;
		}
		
		//È¸Àå °áÁ¤ Á¶°Ç
		//1. ½ÂÁ¡
		//2. 3ÀÇ °¹¼ö
		//3. ¹«½ÂºÎÀÏ ¶§ 0
		int cnt=0;
		if (score[0] > score[1] && score[0] > score[2]) {
			System.out.println("1 " + score[0]);
		} else if (score[1] > score[0] && score[1] > score[2]) {
			System.out.println("2 " + score[1]);			
		} else if (score[2] > score[0] && score[2] > score[1]) {
			System.out.println("3 " + score[2]);			
		} else {
			int result = rank();
			System.out.printf("%d %d", result, score[result-1]);
		}
			
	}

	private static int rank() {
		
		int step=3;
		int num1=0, num2=0, num3=0;
		for (int i=0; i<3; i++) {
			num1 = student1[i] * step;
			num2 = student2[i] * step;
			num3 = student3[i] * step;
			step--;
		}
		
		if (num1>num2 && num1>num3) {
			return 1;
		} else if (num2>num1 && num2>num3) {
			return 2;	
		} else if (num3>num1 && num3>num2)  {
			return 2;		
		}
		return 0;
	}
	
}
